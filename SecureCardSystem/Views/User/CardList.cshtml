@model List<Card>
@{
    ViewData["Title"] = "Kartlarım";
}

<h2 class="mb-4">
    <i class="bi bi-credit-card"></i> Kartlarım
</h2>

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Tüm Kartlarım (@Model.Count)</h5>
        <div class="btn-group">
            <a href="/User/CreateCard" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Yeni Kart
            </a>
            <button type="button" class="btn btn-success btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                <i class="bi bi-download"></i> İndir
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><h6 class="dropdown-header">Tüm Bilgiler</h6></li>
                <li>
                    <a class="dropdown-item" href="/User/ExportCardsToExcel">
                        <i class="bi bi-file-earmark-excel text-success"></i> Excel (Tüm Bilgiler)
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="/User/ExportCardsToPdf">
                        <i class="bi bi-file-earmark-pdf text-danger"></i> PDF (Tüm Bilgiler)
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li><h6 class="dropdown-header">Sadece Kart Numaraları</h6></li>
                <li>
                    <a class="dropdown-item" href="/User/ExportCardNumbersOnlyToExcel">
                        <i class="bi bi-file-earmark-excel text-success"></i> Excel (Sadece Numaralar)
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="/User/ExportCardNumbersOnlyToPdf">
                        <i class="bi bi-file-earmark-pdf text-danger"></i> PDF (Sadece Numaralar)
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="cardsTable">
                <thead>
                    <tr>
                        <th>Kart No</th>
                        <th>Bakiye</th>
                        <th>İlk Bakiye</th>
                        <th>Durum</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var card in Model)
                    {
                        <tr>
                            <td>
                                <strong class="text-primary">@card.CardNumber</strong>
                            </td>
                            <td>
                                @if (card.Balance <= 0)
                                {
                                    <span class="badge bg-danger">@card.Balance.ToString("C2")</span>
                                }
                                else if (card.Balance < card.InitialBalance * 0.3m)
                                {
                                    <span class="badge bg-warning text-dark">@card.Balance.ToString("C2")</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@card.Balance.ToString("C2")</span>
                                }
                            </td>
                            <td>@card.InitialBalance.ToString("C2")</td>
                            <td>
                                @if (card.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> Pasif
                                    </span>
                                }
                            </td>
                            <td>@card.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/User/UpdateBalance?cardNumber=@card.CardNumber"
                                       class="btn btn-warning" title="Bakiye Güncelle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="/User/CardTransactions?cardNumber=@card.CardNumber"
                                       class="btn btn-info" title="İşlem Geçmişi">
                                        <i class="bi bi-clock-history"></i>
                                    </a>

                                    <form asp-action="ToggleCardStatus" asp-controller="User" method="post" style="display:inline;">
                                        <input type="hidden" name="cardNumber" value="@card.CardNumber" />
                                        <button type="submit" class="btn @(card.IsActive ? "btn-secondary" : "btn-success") btn-sm">
                                            @(card.IsActive ? "Pasif Yap" : "Aktif Yap")
                                        </button>
                                    </form>

                                    <form asp-action="DeleteCard" asp-controller="User" method="post" style="display:inline;">
                                        <input type="hidden" name="cardNumber" value="@card.CardNumber" />
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Bu kartı silmek istediğinizden emin misiniz?');">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        <i class="bi bi-info-circle"></i> Henüz kartınız bulunmuyor.
        <a href="/User/CreateCard" class="alert-link">Yeni kart oluşturun</a>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#cardsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                },
                order: [[4, 'desc']],
                pageLength: 25,
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel', 'pdf'
                ]
            });
        });
    </script>
}
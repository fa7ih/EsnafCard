@model List<Transaction>
@{
    ViewData["Title"] = "İşlem Geçmişi";
}

<h2 class="mb-4">
    <i class="bi bi-journal-text"></i> İşlem Geçmişim
</h2>

<div class="card">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Tüm İşlemlerim (@Model.Count)</h5>
        <div>
            <a href="/User/ExportTransactionsToExcel" class="btn btn-light btn-sm">
                <i class="bi bi-file-earmark-excel"></i> Excel İndir
            </a>
            <a href="/User/ExportTransactionsToPdf" class="btn btn-danger btn-sm">
                <i class="bi bi-file-earmark-pdf"></i> PDF İndir
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="transactionsTable">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Kart No</th>
                        <th>Tutar</th>
                        <th>Önceki Bakiye</th>
                        <th>Sonraki Bakiye</th>
                        <th>İşlem Tipi</th>
                        <th>IP Adresi</th>
                        <th>Not</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>
                                <small>@transaction.TransactionDate.ToString("dd.MM.yyyy")</small><br>
                                <small class="text-muted">@transaction.TransactionDate.ToString("HH:mm:ss")</small>
                            </td>
                            <td>
                                <a href="/User/CardTransactions?cardNumber=@transaction.CardNumber"
                                   class="text-primary fw-bold">
                                    @transaction.CardNumber
                                </a>
                            </td>
                            <td>
                                @if (transaction.TransactionType == "Payment")
                                {
                                    <span class="badge bg-danger">-@transaction.Amount.ToString("C2")</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">+@transaction.Amount.ToString("C2")</span>
                                }
                            </td>
                            <td>@transaction.BalanceBefore.ToString("C2")</td>
                            <td>
                                @if (transaction.BalanceAfter <= 0)
                                {
                                    <span class="text-danger fw-bold">@transaction.BalanceAfter.ToString("C2")</span>
                                }
                                else
                                {
                                    <span>@transaction.BalanceAfter.ToString("C2")</span>
                                }
                            </td>
                            <td>
                                @if (transaction.TransactionType == "Payment")
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-cash-coin"></i> Ödeme
                                    </span>
                                }
                                else if (transaction.TransactionType == "BalanceUpdate")
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-pencil"></i> Bakiye Güncelleme
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@transaction.TransactionType</span>
                                }
                            </td>
                            <td>
                                <small class="text-muted">@transaction.IpAddress</small>
                            </td>
                            <td>
                                <small>@transaction.Notes</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">
            <i class="bi bi-bar-chart"></i> İstatistikler
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="text-center">
                    <h4 class="text-primary">@Model.Count</h4>
                    <p class="text-muted">Toplam İşlem</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h4 class="text-success">@Model.Count(t => t.TransactionType == "Payment")</h4>
                    <p class="text-muted">Ödeme İşlemi</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h4 class="text-warning">@Model.Count(t => t.TransactionType == "BalanceUpdate")</h4>
                    <p class="text-muted">Bakiye Güncelleme</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h4 class="text-info">@Model.Where(t => t.TransactionType == "Payment").Sum(t => t.Amount).ToString("C2")</h4>
                    <p class="text-muted">Toplam Ödeme</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="/User" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Ana Sayfaya Dön
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                },
                order: [[0, 'desc']],
                pageLength: 50
            });
        });
    </script>
}

@model List<Transaction>
@{
    ViewData["Title"] = "Kart İşlem Geçmişi";
    var cardNumber = ViewBag.CardNumber as string;
}

<h2 class="mb-4">
    <i class="bi bi-clock-history"></i> Kart İşlem Geçmişi
</h2>

<div class="alert alert-info">
    <h5>
        <i class="bi bi-credit-card"></i> Kart Numarası: <strong>@cardNumber</strong>
    </h5>
    <p class="mb-0">Bu karta ait tüm işlemler aşağıda listelenmektedir.</p>
</div>

<div class="card">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">İşlemler (@Model.Count)</h5>
        <div>
            <a href="/User/CardList" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Kart Listesi
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="cardTransactionsTable">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Tutar</th>
                            <th>Önceki Bakiye</th>
                            <th>Sonraki Bakiye</th>
                            <th>İşlem Tipi</th>
                            <th>IP Adresi</th>
                            <th>Not</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model)
                        {
                            <tr>
                                <td>
                                    <small>@transaction.TransactionDate.ToString("dd.MM.yyyy")</small><br>
                                    <small class="text-muted">@transaction.TransactionDate.ToString("HH:mm:ss")</small>
                                </td>
                                <td>
                                    @if (transaction.TransactionType == "Payment")
                                    {
                                        <span class="badge bg-danger">-@transaction.Amount.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">+@transaction.Amount.ToString("C2")</span>
                                    }
                                </td>
                                <td>@transaction.BalanceBefore.ToString("C2")</td>
                                <td>
                                    @if (transaction.BalanceAfter <= 0)
                                    {
                                        <span class="text-danger fw-bold">@transaction.BalanceAfter.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span>@transaction.BalanceAfter.ToString("C2")</span>
                                    }
                                </td>
                                <td>
                                    @if (transaction.TransactionType == "Payment")
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-cash-coin"></i> Ödeme
                                        </span>
                                    }
                                    else if (transaction.TransactionType == "BalanceUpdate")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-pencil"></i> Bakiye Güncelleme
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@transaction.TransactionType</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@transaction.IpAddress</small>
                                </td>
                                <td>
                                    <small>@transaction.Notes</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light fw-bold">
                            <td>Toplam</td>
                            <td>
                                <span class="badge bg-primary">
                                    @Model.Where(t => t.TransactionType == "Payment").Sum(t => t.Amount).ToString("C2")
                                </span>
                            </td>
                            <td colspan="5">@Model.Count işlem</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                Bu kart için henüz işlem bulunmuyor.
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="/User/CardList" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Kart Listesine Dön
    </a>
    <a href="/User/UpdateBalance?cardNumber=@cardNumber" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Bakiye Güncelle
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#cardTransactionsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                },
                order: [[0, 'desc']],
                pageLength: 25
            });
        });
    </script>
}

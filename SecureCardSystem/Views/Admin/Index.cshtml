@{
    ViewData["Title"] = "Admin Panel";
}

<h2 class="mb-4">
    <i class="bi bi-speedometer2"></i> Admin Panel
</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <h3>@ViewBag.TotalCards</h3>
            <p class="mb-0"><i class="bi bi-credit-card"></i> Toplam Kart</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <h3>@ViewBag.TotalTransactions</h3>
            <p class="mb-0"><i class="bi bi-journal-text"></i> Toplam İşlem</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <h3>@ViewBag.Users.Count</h3>
            <p class="mb-0"><i class="bi bi-people"></i> Toplam Kullanıcı</p>
        </div>
    </div>
</div>

<div class="alert alert-info">
    <i class="bi bi-router"></i> <strong>Mevcut IP Adresiniz:</strong> @ViewBag.CurrentIp
    <br><small>Kullanıcılara IP kısıtlaması eklerken bu adresi kullanabilirsiniz.</small>
</div>

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Kullanıcı Yönetimi</h5>
        <a href="/Admin/CreateUser" class="btn btn-light btn-sm">
            <i class="bi bi-person-plus"></i> Yeni Kullanıcı
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="usersTable">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Roller</th>
                        <th>Kart Sayısı</th>
                        <th>IP Kısıtı</th>
                        <th>Durum</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Users)
                    {
                        <tr>
                            <td>@item.User.FullName</td>
                            <td>@item.User.Email</td>
                            <td>
                                @if (item.Roles.Contains("Admin"))
                                {
                                    <span class="badge bg-danger">@item.Roles</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">@item.Roles</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@item.CardCount</span>
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.User.AllowedIpAddress))
                                {
                                    <span class="badge bg-secondary">Yok</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.User.AllowedIpAddress</span>
                                }
                            </td>
                            <td>
                                @if (item.User.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td>@item.User.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-warning" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#ipModal"
                                            data-userid="@item.User.Id"
                                            data-currentip="@item.User.AllowedIpAddress"
                                            data-username="@item.User.FullName"
                                            title="IP Kısıtı">
                                        <i class="bi bi-router"></i>
                                    </button>
                                    
                                    <form method="post" asp-action="ToggleUserStatus" class="d-inline">
                                        <input type="hidden" name="userId" value="@item.User.Id" />
                                        <button type="submit" class="btn btn-info" title="Durumu Değiştir">
                                            <i class="bi bi-toggle-on"></i>
                                        </button>
                                    </form>
                                    
                                    @if (!item.Roles.Contains("Admin"))
                                    {
                                        <form method="post" asp-action="DeleteUser" class="d-inline" 
                                              onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                            <input type="hidden" name="userId" value="@item.User.Id" />
                                            <button type="submit" class="btn btn-danger" title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- IP Modal -->
<div class="modal fade" id="ipModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">IP Kısıtlaması Ayarla</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="UpdateIpRestriction">
                <div class="modal-body">
                    <input type="hidden" name="userId" id="modalUserId" />
                    
                    <div class="mb-3">
                        <label class="form-label"><strong>Kullanıcı:</strong></label>
                        <p id="modalUserName" class="text-muted"></p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-router"></i> IP Adresi
                        </label>
                        <input type="text" name="ipAddress" id="modalIpAddress" class="form-control" 
                               placeholder="Örn: @ViewBag.CurrentIp">
                        <small class="text-muted">
                            Mevcut IP'niz: <strong>@ViewBag.CurrentIp</strong><br>
                            Boş bırakırsanız IP kısıtlaması kaldırılır.
                        </small>
                    </div>
                    
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Dikkat!</strong> IP kısıtlaması eklendiğinde, kullanıcı sadece bu IP adresinden giriş yapabilecektir.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                },
                order: [[6, 'desc']]
            });

            // IP Modal
            $('#ipModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var userId = button.data('userid');
                var currentIp = button.data('currentip');
                var userName = button.data('username');
                
                $('#modalUserId').val(userId);
                $('#modalIpAddress').val(currentIp);
                $('#modalUserName').text(userName);
            });
        });
    </script>
}

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<h2 class="mb-4">
    <i class="bi bi-person-plus"></i> Yeni Kullanıcı Ekle
</h2>

<div class="alert alert-info">
    <i class="bi bi-router"></i> <strong>Mevcut IP Adresiniz:</strong> @ViewBag.CurrentIp
    <br><small>Bu IP adresini aşağıdaki forma kopyalayabilirsiniz.</small>
</div>

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Ad Soyad</label>
                    <input type="text" name="fullName" class="form-control" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Şifre</label>
                    <input type="password" name="password" class="form-control" required minlength="6">
                    <small class="text-muted">En az 6 karakter, büyük-küçük harf ve rakam içermeli</small>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">IP Adresi Kısıtlaması (Opsiyonel)</label>
                    <div class="input-group">
                        <input type="text" name="allowedIp" id="ipInput" class="form-control" placeholder="Örn: 192.168.1.100">
                        <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('ipInput').value='@ViewBag.CurrentIp'">
                            <i class="bi bi-clipboard"></i> Mevcut IP'yi Kullan
                        </button>
                    </div>
                    <small class="text-muted">Boş bırakırsanız IP kısıtlaması olmaz</small>
                </div>
            </div>

            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Önemli!</strong> IP kısıtlaması eklerseniz, kullanıcı sadece belirttiğiniz IP adresinden giriş yapabilecektir.
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Kullanıcı Oluştur
                </button>
                <a href="/Admin" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

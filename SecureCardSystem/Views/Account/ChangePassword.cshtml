@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning">
                <h4 class="mb-0">
                    <i class="bi bi-key"></i> Şifre Değiştir
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-lock"></i> Mevcut Şifre
                        </label>
                        <input type="password" name="currentPassword" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-lock-fill"></i> Yeni Şifre
                        </label>
                        <input type="password" name="newPassword" class="form-control" required minlength="6">
                        <small class="text-muted">En az 6 karakter, büyük-küçük harf ve rakam içermeli</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-lock-fill"></i> Yeni Şifre (Tekrar)
                        </label>
                        <input type="password" name="confirmPassword" class="form-control" required minlength="6">
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Şifreyi Değiştir
                        </button>
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Admin" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                        }
                        else
                        {
                            <a href="/User" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h6><i class="bi bi-info-circle"></i> Güvenlik İpuçları</h6>
                <ul class="mb-0">
                    <li>Şifreniz en az 6 karakter uzunluğunda olmalıdır</li>
                    <li>Büyük ve küçük harf kullanın</li>
                    <li>En az bir rakam ekleyin</li>
                    <li>Kolay tahmin edilebilir şifreler kullanmayın</li>
                    <li>Şifrenizi düzenli olarak değiştirin</li>
                </ul>
            </div>
        </div>
    </div>
</div>

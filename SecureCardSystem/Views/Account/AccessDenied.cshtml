@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="access-denied-wrapper">
    <div class="access-denied-card">
        <div class="icon">🚫</div>

        <h1>Erişim Engellendi</h1>

        <p class="subtitle">
            Bu hesaba <strong>mevcut ağ / cihaz</strong> üzerinden erişim izni bulunmamaktadır.
        </p>

        <div class="info-box">
            <p>
                Güvenlik politikaları gereği bu işlem engellenmiştir.
            </p>
            <p>
                Eğer bunun bir hata olduğunu düşünüyorsanız
                <strong>sistem yöneticisi</strong> ile iletişime geçiniz.
            </p>
        </div>

        <div class="actions">
            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
                Çıkış Yap
            </a>

            <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">
                Farklı Hesapla Giriş
            </a>
        </div>

        <p class="small-note">
            Hata Kodu: <strong>403 – Forbidden</strong>
        </p>
    </div>
</div>

<style>
    .access-denied-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f4f6f9;
    }

    .access-denied-card {
        background: #ffffff;
        padding: 40px;
        max-width: 520px;
        width: 100%;
        text-align: center;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .access-denied-card .icon {
        font-size: 64px;
        margin-bottom: 20px;
    }

    .access-denied-card h1 {
        color: #dc3545;
        margin-bottom: 15px;
    }

    .access-denied-card .subtitle {
        color: #444;
        margin-bottom: 25px;
        font-size: 16px;
    }

    .info-box {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        font-size: 14px;
        color: #555;
        margin-bottom: 25px;
    }

    .actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
    }

    .btn-danger {
        background: #dc3545;
        color: #fff;
    }

    .btn-secondary {
        background: #6c757d;
        color: #fff;
    }

    .small-note {
        font-size: 12px;
        color: #888;
    }
</style>

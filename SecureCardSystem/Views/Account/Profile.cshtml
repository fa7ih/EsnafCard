@model ApplicationUser
@{
    ViewData["Title"] = "Profilim";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person"></i> Profil Bilgilerim
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post" asp-action="UpdateProfile">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="bi bi-person-fill"></i> Ad Soyad
                            </label>
                            <input type="text" name="fullName" class="form-control" value="@Model.FullName" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input type="email" name="email" class="form-control" value="@Model.Email" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="bi bi-calendar"></i> Kayıt Tarihi
                            </label>
                            <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")" readonly>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="bi bi-router"></i> İzin Verilen IP Adresi
                            </label>
                            <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.AllowedIpAddress) ? "Kısıtlama yok" : Model.AllowedIpAddress)" readonly>
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> IP adresinizi değiştirmek için admin ile iletişime geçin
                            </small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="bi bi-shield-check"></i> Hesap Durumu
                            </label>
                            <br>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle"></i> Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-x-circle"></i> Pasif
                                </span>
                            }
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Bilgileri Güncelle
                        </button>
                        <a href="/Account/ChangePassword" class="btn btn-warning">
                            <i class="bi bi-key"></i> Şifre Değiştir
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Admin" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Ana Sayfa
                            </a>
                        }
                        else
                        {
                            <a href="/User" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Ana Sayfa
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h6><i class="bi bi-info-circle"></i> Profil Bilgileri Hakkında</h6>
                <ul class="mb-0">
                    <li><strong>Ad Soyad:</strong> Görünen adınız, değiştirebilirsiniz</li>
                    <li><strong>Email:</strong> Giriş yaparken kullanılan email adresi</li>
                    <li><strong>IP Kısıtlaması:</strong> Sadece admin tarafından belirlenebilir</li>
                    <li><strong>Şifre:</strong> "Şifre Değiştir" butonu ile güncelleyebilirsiniz</li>
                </ul>
            </div>
        </div>
    </div>
</div>

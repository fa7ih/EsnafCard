@model ForgotPassword

@{
    ViewData["Title"] = "Şifre Sıfırla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-key" style="font-size: 4rem; color: #ffc107;"></i>
                    <h2 class="mt-3">Şifremi Unuttum</h2>
                    <p class="text-muted">Email adresinize şifre sıfırlama linki göndereceğiz</p>
                </div>

                <form asp-action="Index" method="post">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-envelope"></i> Email Adresiniz
                        </label>
                        <input type="email" name="email" class="form-control" required
                               placeholder="ornek@email.com" autofocus>
                        <small class="text-muted">Kayıtlı email adresinizi girin</small>
                    </div>

                    <button type="submit" class="btn btn-warning w-100 mt-3">
                        <i class="bi bi-send"></i> Şifre Sıfırlama Linki Gönder
                    </button>
                </form>

                <div class="mt-4 text-center">
                    <a href="/Account/Login" class="text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Giriş sayfasına dön
                    </a>
                </div>

                <div class="alert alert-info mt-4">
                    <h6><i class="bi bi-info-circle"></i> Nasıl Çalışır?</h6>
                    <ol class="mb-0 small">
                        <li>Email adresinizi girin</li>
                        <li>Email kutunuzu kontrol edin</li>
                        <li>Gelen maildeki linke tıklayın</li>
                        <li>Yeni şifrenizi belirleyin</li>
                        <li>Yeni şifrenizle giriş yapın</li>
                    </ol>
                </div>

                <div class="alert alert-warning mt-3">
                    <small>
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Önemli:</strong> Şifre sıfırlama linki sadece 1 saat geçerlidir ve tek kullanımlıktır.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
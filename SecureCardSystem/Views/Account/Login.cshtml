@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock" style="font-size: 4rem; color: #667eea;"></i>
                    <h2 class="mt-3">Güvenli Giriş</h2>
                    <p class="text-muted">Lütfen bilgilerinizi girin</p>
                </div>

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-envelope"></i> Email
                        </label>
                        <input type="email" name="email" class="form-control" required placeholder="ornek@email.com">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-lock"></i> Şifre
                        </label>
                        <input type="password" name="password" class="form-control" required placeholder="••••••••">
                    </div>

                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <button type="submit" class="btn btn-primary w-100 mt-3">
                        <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                    </button>
                </form>

                <div class="mt-3 text-center">
                    <a href="/Account/Index" class="text-decoration-none">
                        <i class="bi bi-key"></i> Şifremi Unuttum
                    </a>
                </div>

                <div class="mt-4 text-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Hoşgeldiniz
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

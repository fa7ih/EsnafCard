@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center">
    <div class="mb-5">
        <i class="bi bi-shield-lock" style="font-size: 5rem; color: white; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></i>
        <h1 class="display-4 text-white mt-3" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
            Güvenli Kart Yönetim Sistemi
        </h1>
        <p class="lead text-white" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
            Modern, güvenli ve kullanıcı dostu kart yönetimi
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h3 class="mb-4">Sistem Özellikleri</h3>
                    
                    <div class="row text-start">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-shield-check text-success me-3" style="font-size: 2rem;"></i>
                                <div>
                                    <h5>Güvenli Erişim</h5>
                                    <p class="text-muted">IP bazlı kısıtlama ve Identity yetkilendirme</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-credit-card text-primary me-3" style="font-size: 2rem;"></i>
                                <div>
                                    <h5>Kullanıcıya Özel Kartlar</h5>
                                    <p class="text-muted">Her kullanıcı sadece kendi kartlarını yönetir</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-cash-coin text-warning me-3" style="font-size: 2rem;"></i>
                                <div>
                                    <h5>Ödeme İşlemleri</h5>
                                    <p class="text-muted">Manuel ve OCR destekli ödeme alma</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-file-earmark-excel text-success me-3" style="font-size: 2rem;"></i>
                                <div>
                                    <h5>Gelişmiş Raporlama</h5>
                                    <p class="text-muted">Excel ve PDF export, sadece kart numaraları export</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="mt-4">
                            <a href="/Account/Login" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
